
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (!this.User.Identity.IsAuthenticated)
{
    <div class="jumbotron bg-eventures w-75 mx-auto">
        <h1>Eventures - The best ticket service in the world.</h1>
        <hr class="hr-2 bg-dark" />
        <h3><a href="/Identity/Account/Login">Login</a> to start "evening".</h3>
        <h3><a href="/Identity/Account/Register">Register</a> if you don't have account.</h3>
    </div>
}
else
{
    if (this.User.IsInRole("Admin"))
    {
        <div class="jumbotron bg-eventures w-75 mx-auto">
            <h1 class="text-center">Greetings, Administrator - @this.User.Identity.Name!</h1>
            <hr class="hr-2 bg-secondary" />
            <h3 class="text-center text-muted">Enjoy your work.</h3>
        </div>
    }
    else
    {
        <div class="jumbotron bg-eventures w-75 mx-auto">
            <h1 class="text-center">Welcome, @this.User.Identity.Name!</h1>
            <hr class="hr-2 bg-secondary" />
            <h3 class="text-center text-muted" >Eventures wishes you exciting experience</h3>
        </div>
    }
}